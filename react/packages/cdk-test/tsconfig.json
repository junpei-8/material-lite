{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "module": "esnext",
    "target":"es5",
    "lib": ["dom", "esnext", "es2018"],
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@material-lite/react-cdk/utils": [
        "./src/utils"
      ]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "example"]
}
